@model QuoteDto?

<form method="post" asp-action="Update">
    <div class="form-group">
        <input type="hidden" asp-for="Id">
        <label>Quote Text</label>
        <input asp-for="QuoteText" type="text" class="form-control" placeholder="Enter quote dtext">
        <span asp-validation-for="QuoteText" class="text-danger"></span>
    </div>
  <div class="form-group">
        <label>Quote Type</label>
      <textarea asp-for="ImageText" class="form-control"  placeholder="Enter quote type"></textarea>
       <span asp-validation-for="ImageText" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary"style="background-color: yellow;">Update</button>
</form>